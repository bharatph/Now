<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:showIn="@layout/activity_main">

    <include layout="@layout/header"/>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/toolbar"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton
                android:layout_weight="1"
                android:src="@drawable/ic_history_clock_button"
                android:layout_width="0dp" android:layout_height="@dimen/imageButtonSize"/>
    </LinearLayout>


    <include
            layout="@layout/circle_timer"
            android:padding="@dimen/margin_medium"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="0dp"/>

    <Space android:layout_width="wrap_content" android:layout_height="128dp"/>
</LinearLayout>